@model BookingHistoryViewModel
@{
    ViewData["Title"] = "Booking History";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Profile">My Profile</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Booking History</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h4 class="mb-0">
                                <i class="fas fa-history"></i>
                                Booking History
                            </h4>
                            <small class="text-muted">@Model.TotalBookings total bookings â€¢ $@Model.TotalSpent.ToString("N2") spent</small>
                        </div>
                        <div class="col-md-6">
                            <div class="text-end">
                                <a asp-controller="Flights" asp-action="Index" class="btn btn-primary">
                                    <i class="fas fa-plus"></i>
                                    Book New Flight
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Search and Filter Form -->
                    <form method="get" class="row g-3 mb-4">
                        <div class="col-md-4">
                            <input type="text" name="search" value="@Model.SearchTerm" 
                                   class="form-control" placeholder="Search by booking reference or name...">
                        </div>
                        <div class="col-md-3">
                            <select name="status" class="form-select">
                                <option value="">All Status</option>
                                <option value="@BookingStatus.Pending" selected="@(Model.StatusFilter == BookingStatus.Pending)">Pending</option>
                                <option value="@BookingStatus.Confirmed" selected="@(Model.StatusFilter == BookingStatus.Confirmed)">Confirmed</option>
                                <option value="@BookingStatus.Cancelled" selected="@(Model.StatusFilter == BookingStatus.Cancelled)">Cancelled</option>
                                <option value="@BookingStatus.Completed" selected="@(Model.StatusFilter == BookingStatus.Completed)">Completed</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-outline-primary w-100">
                                <i class="fas fa-search"></i> Search
                            </button>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="BookingHistory" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-times"></i> Clear
                            </a>
                        </div>
                    </form>

                    @if (Model.Bookings.Any())
                    {
                        <!-- Bookings Table -->
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Booking Reference</th>
                                        <th>Passenger</th>
                                        <th>Booking Date</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var booking in Model.Bookings)
                                    {
                                        <tr>
                                            <td>
                                                <strong class="text-primary">@booking.BookingReference</strong>
                                                <br>
                                                <small class="text-muted">@booking.FlightInfo</small>
                                            </td>
                                            <td>@booking.PassengerName</td>
                                            <td>
                                                @booking.BookingDate.ToString("MMM dd, yyyy")
                                                <br>
                                                <small class="text-muted">@booking.BookingDate.ToString("HH:mm")</small>
                                            </td>
                                            <td class="fw-bold text-success">$@booking.TotalAmount.ToString("N2")</td>
                                            <td>
                                                <span class="badge @booking.StatusBadgeClass">
                                                    @booking.Status.ToString()
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <button type="button" class="btn btn-outline-info" 
                                                            data-bs-toggle="modal" data-bs-target="#bookingModal@(booking.Id)">
                                                        <i class="fas fa-eye"></i> View
                                                    </button>
                                                    @if (booking.CanCancel)
                                                    {
                                                        <button type="button" class="btn btn-outline-danger" 
                                                                data-bs-toggle="modal" data-bs-target="#cancelModal@(booking.Id)">
                                                            <i class="fas fa-times"></i> Cancel
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (Model.TotalPages > 1)
                        {
                            <nav aria-label="Booking history pagination">
                                <ul class="pagination justify-content-center">
                                    @for (int i = 1; i <= Model.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" asp-action="BookingHistory" 
                                               asp-route-page="@i" 
                                               asp-route-search="@Model.SearchTerm"
                                               asp-route-status="@Model.StatusFilter">@i</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-ticket-alt fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No bookings found</h5>
                            <p class="text-muted">You haven't made any bookings yet.</p>
                            <a asp-controller="Flights" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-search"></i>
                                Search Flights
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Cancel Booking Modals -->
@foreach (var booking in Model.Bookings.Where(b => b.CanCancel))
{
    <div class="modal fade" id="cancelModal@(booking.Id)" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Cancel Booking</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to cancel booking <strong>@booking.BookingReference</strong>?</p>
                    <p class="text-muted">This action cannot be undone and a refund will be processed within 5-7 business days.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep Booking</button>
                    <form asp-action="CancelBooking" method="post" style="display: inline;">
                        <input type="hidden" name="bookingId" value="@booking.Id" />
                        <button type="submit" class="btn btn-danger">Cancel Booking</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<!-- View Booking Details Modals -->
@foreach (var booking in Model.Bookings)
{
    <div class="modal fade" id="bookingModal@(booking.Id)" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Booking Details - @booking.BookingReference</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Booking Information</h6>
                            <table class="table table-sm">
                                <tr>
                                    <td><strong>Reference:</strong></td>
                                    <td>@booking.BookingReference</td>
                                </tr>
                                <tr>
                                    <td><strong>Passenger:</strong></td>
                                    <td>@booking.PassengerName</td>
                                </tr>
                                <tr>
                                    <td><strong>Amount:</strong></td>
                                    <td>$@booking.TotalAmount.ToString("N2")</td>
                                </tr>
                                <tr>
                                    <td><strong>Status:</strong></td>
                                    <td><span class="badge @booking.StatusBadgeClass">@booking.Status</span></td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6>Flight Information</h6>
                            <p>@booking.FlightInfo</p>
                            <p class="text-muted">Detailed flight information would be displayed here.</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}